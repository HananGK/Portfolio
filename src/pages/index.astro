---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import LinkedInIcon from '../icons/LinkedIn.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHubIcon from '../icons/GitHub.astro';
import EmailIcon from '../icons/Email.astro';
import CVIcon from '../icons/CV.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SkillsIcon from '../icons/Skills.astro';
import Skills from '../components/Skills.astro';
import ProjectsIcon from '../icons/Projects.astro';
import Projects from '../components/Projects.astro';
import ContactIcon from '../icons/Contact.astro';
import Contact from '../components/Contacto.astro';
---

<Layout title="Portfolio Hanan Gabarrón Kalito - Web Developer"
description="Portfolio de Hanan Gabarrón Kalito, desarrolladora y programadora web junior de España, formación principalmente en Front-end web development.">
	<main class="px-4">
		<SectionContainer class="py-56">
			<div class="flex flex-row gap-x-4">
				<img class="rounded-full size-20 mb-4 ring-2 ring-purple-400" src="https://media.licdn.com/dms/image/D4D03AQEPD7tx5LYBuQ/profile-displayphoto-shrink_400_400/0/1710002247876?e=2147483647&v=beta&t=a3psjkCti4iY6A5K1BTUJJF7N8PQ9Catsx7NIPyqU0M" alt="Hanan Gabarron photo" />
				<a href="https://linkedin.com/in/hanangabarron" target="_blank" rel="noopener" class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></a>
			</div>
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold pb-6 lg:pb-10">Hanan Gabarrón Kalito </h1>
			<h2 class="text:xl lg:text-2xl opacity-80 text-wrap max-w-[700px]"><span class="font-bold text-purple-400">Web Developer Junior</span>, principalmente en <span class="underline">Front-end</span></h2>
			<h2 class="text:xl lg:text-2xl opacity-80 text-wrap max-w-[700px]"> De Algeciras (Cádiz), <span class="font-bold text-purple-200">España </span> <img class="size-8 inline" src='https://th.bing.com/th/id/R.6c887551226e73f6fb5109b1b5964db8?rik=DVtCgD0afCG%2bSQ&pid=ImgRaw&r=0' alt="Spain flag"/></h2>
			

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://linkedin.com/in/hanangabarron">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/HananGK">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="mailto:hanangabarron@gmail.com">
					<EmailIcon class="size-4 md:size-6" />
					hanangabarron@gmail.com
				</SocialPill>
				<SocialPill href="https://drive.google.com/file/d/1xRI9isFZOPW9hEUu4o9jRGj-AYqAceJs/view?usp=drive_link">
					<CVIcon class="size-4 md:size-6" />
					CV
				</SocialPill>
			</nav>
		<SectionContainer/>

		<SectionContainer id="skills" class="pt-20 md:pt-0">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<SkillsIcon class="size-8" />
				Skills
			</h2>
			<Skills />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<ProjectsIcon class="size-8" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<ContactIcon class="size-8" />
				Contacto
			</h2>
			<Contact />
		</SectionContainer>

	</main>
</Layout>


