---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SkillsIcon from '../icons/Skills.astro';
import Skills from '../components/Skills.astro';
import ProjectsIcon from '../icons/Projects.astro';
import Projects from '../components/Projects.astro';
import ContactIcon from '../icons/Contact.astro';
import Contact from '../components/Contacto.astro';
import HeroSection from '../components/Hero.astro';
---

<Layout title="Portfolio Hanan Gabarrón Kalito - Software Developer"
description="Hanan Gabarrón Kalito's Portfolio, Spanish Junior Software Developer, focused on backend with Java & Python.">
	<main class="px-4">
		<SectionContainer class="py-56">
			<HeroSection />
		<SectionContainer/>

		<SectionContainer id="skills" class="pt-20 md:pt-0">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<SkillsIcon class="size-8" />
				Skills
			</h2>
			<Skills />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<ProjectsIcon class="size-8" />
				Projects
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<ContactIcon class="size-8" />
				Contact
			</h2>
			<Contact />
		</SectionContainer>

	</main>
</Layout>


